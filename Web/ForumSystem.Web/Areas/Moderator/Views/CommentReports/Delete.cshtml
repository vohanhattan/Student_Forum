@using ForumSystem.Web.Areas.Moderator.ViewModels.CommentReports

@model CommentReportViewModel

<button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#confirm-delete-comment-report-@Model.Id">
    Delete
</button>

<div class="modal fade" id="confirm-delete-comment-report-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-comment-report-label-@Model.Id">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="confirm-delete-comment-report-label-@Model.Id">Delete Report</h4>
            </div>
            @using (Html.BeginForm("Delete", "CommentReports", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <p>Are you sure you want to delete this report?</p>
                </div>
                <div class="modal-footer">
                    <div class="form-actions no-color">
                        <button type="button" class="btn btn-default btn-sm pull-left" data-dismiss="modal">Cancel</button>
                        <input type="submit" value="Delete Report" class="btn btn-danger btn-sm pull-right" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>