@using System.Collections.Generic

@model IEnumerable<ForumSystem.Web.ViewModels.Answers.AnswerViewModel>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Post).Titled("Post")
            .RenderedAs(model => Html.ActionLink(model.Post, "Details", new { area = string.Empty, controller = "Answers", Id = model.Id }));
        columns.Add(model => model.PostAuthor).Titled("Post Author")
            .RenderedAs(model => Html.ActionLink(model.PostAuthor, "Details", new { area = string.Empty, controller = "Users", id = model.PostAuthorId }));
        columns.Add(model => model.CommentsCount).Titled("Comments");
        columns.Add(model => model.LikesCount).Titled("Likes");
        columns.Add(model => model.ReportsCount).Titled("Reports");
        columns.Add(model => model.CreatedOn).Titled("CreatedOn");
        columns.Add(model => model.ModifiedOn).Titled("ModifiedOn");
    })
    .Css("table-responsive table-bordered table-striped table-borderless")
    .Empty("No data found")
)